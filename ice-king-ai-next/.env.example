# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# 自定义Base URL - 支持所有OpenAI协议兼容的API提供商
# 默认: https://api.openai.com/v1 (官方OpenAI)
# 常用第三方提供商示例:
# OPENAI_BASE_URL=https://api.openai.com/v1                    # 官方OpenAI
# OPENAI_BASE_URL=https://api.siliconflow.cn/v1                # 硅基流动
# OPENAI_BASE_URL=https://api.deepseek.com/v1                  # DeepSeek
# OPENAI_BASE_URL=https://api.moonshot.cn/v1                   # 月之暗面
# OPENAI_BASE_URL=https://api.zhipuai.cn/v2/                   # 智谱AI
# OPENAI_BASE_URL=https://api.minimax.chat/v1/text/chatcompletion_v2  # MiniMax
# OPENAI_BASE_URL=https://api.qwenlm.cn/v1                     # 通义千问
# OPENAI_BASE_URL=https://api.suma.com/v1                      # 商汤日日新
# OPENAI_BASE_URL=https://spark-api-open.xf-yun.com/v1         # 讯飞星火
# OPENAI_BASE_URL=https://ark.cn-beijing.volces.com/api/v3     # 火山引擎
# OPENAI_BASE_URL=https://api.openai.com/v1                    # 默认官方OpenAI
OPENAI_BASE_URL=https://api.openai.com/v1

# AI模型配置 (可自定义)
# 常用模型选择:
# OPENAI_MODEL=gpt-4                                           # OpenAI GPT-4 (高质量，成本高)
# OPENAI_MODEL=gpt-4-turbo                                     # OpenAI GPT-4 Turbo (平衡性能)
# OPENAI_MODEL=gpt-3.5-turbo                                   # OpenAI GPT-3.5 (低成本，速度快)
# OPENAI_MODEL=deepseek-chat                                   # DeepSeek Chat (中文优化)
# OPENAI_MODEL=moonshot-v1-8k                                  # 月之暗面Kimi
# OPENAI_MODEL=glm-4                                           # 智谱GLM-4
# OPENAI_MODEL=qwen-turbo                                      # 通义千问Turbo
OPENAI_MODEL=gpt-3.5-turbo

# 单独的分析模型配置 (可选)
# 如果不配置，将自动使用OPENAI_MODEL的值
# AUDIENCE_ANALYZE_MODEL=deepseek-chat                          # 受众分析专用模型
# SELLING_POINTS_ANALYZE_MODEL=deepseek-chat                    # 卖点分析专用模型

# 生成参数配置
OPENAI_TEMPERATURE=0.8                                         # 创造性 (0-1, 越高越有创意)
OPENAI_MAX_TOKENS=2000                                         # 最大生成长度

# Alternative LLM Providers
CLAUDE_API_KEY=your_claude_api_key_here
MINIMAX_API_KEY=your_minimax_api_key_here

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379
# For production, use Redis Cloud or similar service
# REDIS_URL=redis://default:password@host:port

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Ice King AI

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Analytics & Monitoring
ANALYTICS_API_KEY=your_analytics_key_here
SENTRY_DSN=your_sentry_dsn_here

# Database (if needed for future features)
DATABASE_URL=postgresql://username:password@localhost:5432/ice_king_ai

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000